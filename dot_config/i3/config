set_from_resource $base00 base00 #000000
set_from_resource $base01 base01 #111111
set_from_resource $base03 base03 #333333
set_from_resource $base05 base05 #555555
set_from_resource $base07 base07 #777777
set_from_resource $base08 base08 #888888
set_from_resource $base0c base0c #cccccc
set_from_resource $base0d base0d #dddddd

set $font Ubuntu
set $font-size 11

set $mod Mod4

client.focused          $base05 $base0d $base00 $base0d $base0c
client.focused_inactive $base01 $base01 $base05 $base03 $base01
client.unfocused        $base01 $base00 $base05 $base01 $base01
client.urgent           $base08 $base08 $base00 $base08 $base08
client.placeholder      $base00 $base00 $base05 $base00 $base00
client.background       $base07

default_border pixel 1
default_floating_border none

font pango:$font $font-size

set $w1    "1:terminal"
set $w2    "2:code-visual-studio"
set $w3    "3:code-intellij"
set $w4    "4:web"
set $w5    "5:files"
set $w6    "6:document-editor"
set $w7    "7:media-player"
set $w8    "8:chat"
set $w9    "9:free"
set $w10   "10:torrent"

floating_modifier $mod

bindsym $mod+Return exec kitty -1
bindsym $mod+Shift+q kill

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# bindsym $mod+Left focus left
# bindsym $mod+Down focus down
# bindsym $mod+Up focus up
# bindsym $mod+Right focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# bindsym $mod+Shift+Left move left
# bindsym $mod+Shift+Down move down
# bindsym $mod+Shift+Up move up
# bindsym $mod+Shift+Right move right

bindsym $mod+semicolon split h
bindsym $mod+v split v

bindsym $mod+f fullscreen toggle

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

bindsym $mod+1 workspace $w1
bindsym $mod+2 workspace $w2
bindsym $mod+3 workspace $w3
bindsym $mod+4 workspace $w4
bindsym $mod+5 workspace $w5
bindsym $mod+6 workspace $w6
bindsym $mod+7 workspace $w7
bindsym $mod+8 workspace $w8
bindsym $mod+9 workspace $w9
bindsym $mod+0 workspace $w10

bindsym $mod+Shift+1 move container to workspace $w1
bindsym $mod+Shift+2 move container to workspace $w2
bindsym $mod+Shift+3 move container to workspace $w3
bindsym $mod+Shift+4 move container to workspace $w4
bindsym $mod+Shift+5 move container to workspace $w5
bindsym $mod+Shift+6 move container to workspace $w6
bindsym $mod+Shift+7 move container to workspace $w7
bindsym $mod+Shift+8 move container to workspace $w8
bindsym $mod+Shift+9 move container to workspace $w9
bindsym $mod+Shift+0 move container to workspace $w10

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

mode "resize" {
  bindsym h resize shrink width 10 px or 10 ppt
  bindsym j resize grow height 10 px or 10 ppt
  bindsym k resize shrink height 10 px or 10 ppt
  bindsym l resize grow width 10 px or 10 ppt

  # bindsym Left resize shrink width 10 px or 10 ppt
  # bindsym Down resize grow height 10 px or 10 ppt
  # bindsym Up resize shrink height 10 px or 10 ppt
  # bindsym Right resize grow width 10 px or 10 ppt

  bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

bindsym XF86AudioPrev		exec --no-startup-id playerctl previous
bindsym XF86AudioNext		exec --no-startup-id playerctl next
bindsym XF86AudioPlay		exec --no-startup-id playerctl play-pause
bindsym XF86AudioMute		exec --no-startup-id amixer -q -D pulse sset Master 1+ toggle
bindsym XF86AudioRaiseVolume	exec --no-startup-id amixer -q -D pulse sset Master 5%+ unmute
bindsym XF86AudioLowerVolume	exec --no-startup-id amixer -q -D pulse sset Master 5%- unmute
bindsym XF86MonBrightnessUp	exec --no-startup-id xbacklight -inc 5
bindsym XF86MonBrightnessDown	exec --no-startup-id xbacklight -dec 5
bindsym $mod+Escape		exec --no-startup-id dm-tool lock
bindsym Print			exec --no-startup-id take-screenshot
bindsym grave			exec --no-startup-id albert toggle
bindsym $mod+a			exec --no-startup-id polybar-autohide toggle
bindsym $mod+Shift+s		sticky toggle

#assign workspaces
assign [class="^kitty$"] $w1
assign [instance="^(code-oss|emacs)$"] $w2
assign [class="^(jetbrains-(idea-ce|studio)|Postman)$"] $w3
assign [class="^Google-chrome$"] $w4
assign [instance="^pcmanfm$"] $w5
assign [class="^Gimp.*|Joplin$"] $w6
assign [class="^vlc$"] $w7
assign [instance="^slack$"] $w8
assign [instance="^transmission-gtk$"] $w10
for_window [class="Spotify"] move to workspace $w7

# float all pop-up windows
for_window [window_role="pop-up"] floating enable

#float, resize and reposition blueman manager window
for_window [class="Blueman-manager"] floating enable
for_window [class="Blueman-manager"] resize set 720 560
for_window [class="Blueman-manager"] move position center

#float and reposition network manager connection editor window
for_window [class="Nm-connection-editor"] floating enable
for_window [class="Nm-connection-editor"] move position center

# GTK3 File Chooser Dialog window size issue workaround
for_window [window_role="GtkFileChooserDialog"] resize set 720 560
for_window [window_role="GtkFileChooserDialog"] move position center

exec_always --no-startup-id numlockx on
exec_always --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec_always --no-startup-id dex -a
exec_always --no-startup-id compton
